{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "company_id",
    "company_name",
    "company_metadata",
    "organization_id",
    "sysadmin_holder_id",
    "sysoperator_holder_id",
    "created_at"
  ],
  "properties": {
    "company_id": {
      "type": "string",
      "format": "hostname"
    },
    "company_name": {
      "type": "string",
      "minLength": 1
    },
    "corporate_number": {
      "type": "string",
      "pattern": "^[0-9]{0,13}$"
    },
    "company_metadata": {
      "type": "string",
      "minLength": 1
    },
    "organization_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "sysadmin_holder_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "sysoperator_holder_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "created_at": {
      "type": "integer",
      "minimum": 0
    }
  }
}
