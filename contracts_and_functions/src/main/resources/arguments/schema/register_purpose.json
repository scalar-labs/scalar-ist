{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "action",
    "company_id",
    "organization_id",
    "category_of_purpose",
    "purpose_name",
    "description",
    "legal_text",
    "user_friendly_text",
    "guidance",
    "note",
    "created_at"
  ],
  "properties": {
    "action": {
      "type": "string",
      "enum": [
        "insert"
      ]
    },
    "company_id": {
      "type": "string",
      "format": "hostname"
    },
    "organization_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "category_of_purpose": {
      "type": "string",
      "minLength": 1
    },
    "purpose_name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "legal_text": {
      "type": "string",
      "minLength": 1
    },
    "user_friendly_text": {
      "type": "string",
      "minLength": 1
    },
    "guidance": {
      "type": "string",
      "minLength": 1
    },
    "note": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "integer",
      "minimum": 0
    }
  }
}
