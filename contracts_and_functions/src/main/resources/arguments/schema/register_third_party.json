{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "company_id",
    "third_party_domain",
    "third_party_name",
    "third_party_metadata",
    "organizations",
    "created_at"
  ],
  "properties": {
    "company_id": {
      "type": "string",
      "format": "hostname"
    },
    "third_party_domain": {
      "type": "string",
      "format": "hostname"
    },
    "third_party_name": {
      "type": "string",
      "minLength": 1
    },
    "corporate_number": {
      "type": "string",
      "pattern": "^[0-9]{13}$"
    },
    "third_party_metadata": {
      "type": "string",
      "minLength": 1
    },
    "organizations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^([a-zA-Z0-9]+)$"
      }
    },
    "created_at": {
      "type": "integer",
      "minimum": 0
    }
  }
}
