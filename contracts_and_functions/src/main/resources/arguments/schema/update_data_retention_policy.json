{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "action",
    "company_id",
    "organization_id",
    "description",
    "is_active",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "action": {
      "type": "string",
      "enum": [
        "update"
      ]
    },
    "company_id": {
      "type": "string",
      "format": "hostname"
    },
    "organization_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "policy_type": {
      "type": "string",
      "enum": [
        "finite",
        "indefinite"
      ]
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "is_active": {
      "type": "boolean"
    },
    "created_at": {
      "type": "integer",
      "minimum": 0
    },
    "updated_at": {
      "type": "integer",
      "minimum": 0
    }
  }
}
