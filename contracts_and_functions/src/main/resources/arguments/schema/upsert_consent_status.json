{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "data_subject_id",
    "consent_statement_id",
    "consent_status",
    "purpose_ids",
    "data_set_schema_ids"
  ],
  "properties": {
    "data_subject_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "consent_statement_id": {
      "type": "string",
      "pattern": "^([a-zA-Z0-9]+)$"
    },
    "consent_status": {
      "type": "string",
      "enum": [
        "approved",
        "rejected",
        "configured"
      ]
    },
    "benefit_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([a-zA-Z0-9]+)$"
      }
    },
    "purpose_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([a-zA-Z0-9]+)$"
      }
    },
    "data_set_schema_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([a-zA-Z0-9]+)$"
      }
    },
    "third_party_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([a-zA-Z0-9]+)$"
      }
    },
    "optional_third_party_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([a-zA-Z0-9]+)$"
      }
    },
    "data_retention_policy": {
      "type": "object",
      "properties": {
        "nondeletion_purging": {
          "type": "string"
        },
        "deletion_purging": {
          "type": "string"
        }
      }
    },
    "optional_purposes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "consent_status",
          "purpose_ids",
          "data_set_schema_ids"
        ],
        "properties": {
          "consent_status": {
            "type": "string",
            "enum": [
              "approved",
              "rejected",
              "configured"
            ]
          },
          "benefit_ids": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^([a-zA-Z0-9]+)$"
            }
          },
          "purpose_ids": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^([a-zA-Z0-9]+)$"
            }
          },
          "data_set_schema_ids": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^([a-zA-Z0-9]+)$"
            }
          },
          "data_retention_policy": {
            "type": "object",
            "properties": {
              "nondeletion_purging": {
                "type": "string"
              },
              "deletion_purging": {
                "type": "string"
              }
            }
          },
          "third_party_ids": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^([a-zA-Z0-9]+)$"
            }
          },
          "optional_third_party_ids": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^([a-zA-Z0-9]+)$"
            }
          }
        }
      }
    }
  }
}
