{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "consent_statement_id",
    "company_id",
    "organization_id",
    "status",
    "updated_at"
  ],
  "properties": {
    "consent_statement_id": {
      "type": "string",
      "pattern": "^([a-zA-Z0-9-]+)$"
    },
    "company_id": {
      "type": "string",
      "format": "hostname"
    },
    "organization_id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "published",
        "reviewed",
        "inactive"
      ]
    },
    "updated_at": {
      "type": "integer",
      "minimum": 0
    }
  }
}
