{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "type":"object",
  "required":[
    "company_id",
    "organization_id",
    "policy_name",
    "policy_type",
    "length_of_use",
    "length_of_retention",
    "description",
    "created_at"
  ],
  "properties":{
    "company_id":{
      "type":"string",
      "format":"hostname"
    },
    "organization_id":{
      "type":"string",
      "pattern":"^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "policy_name":{
      "type":"string",
      "minLength":1
    },
    "policy_type":{
      "type":"string",
      "enum":[
        "finite",
        "indefinite"
      ]
    },
    "length_of_use":{
      "type":"string",
      "minLength":1
    },
    "length_of_retention":{
      "type":"string",
      "minLength":1
    },
    "description":{
      "type":"string",
      "minLength":1
    },
    "created_at":{
      "type":"integer",
      "minimum":0
    }
  }
}
