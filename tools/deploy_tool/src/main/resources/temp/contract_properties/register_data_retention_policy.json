        "type":"string"
      },
      "policy_name":{
        "type":"string"
      },
      "policy_type":{
        "type":"string"
      },
      "length_of_use":{
        "type":"string"
      },
      "length_of_retention":{
        "type":"string"
      },
      "description":{
        "type":"string"
      }
    }
  },
  "table_schema": {
