{
  "contract_argument_schema":{
    "$schema":"http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
      "action",
      "company_id",
      "organization_id",
      "category_of_purpose",
      "purpose_name",
      "description",
      "legal_text",
      "user_friendly_text",
      "guidance",
      "note",
      "created_at"
    ],
    "properties": {
      "action":{
        "type":"string",
        "enum":[
          "insert"
        ]
      },
      "company_id": {
        "type": "string",
        "format": "hostname"
      },
      "organization_id": {
        "type": "string",
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
      },
      "category_of_purpose": {
        "type": "string",
        "minLength": 1
      },
      "purpose_name": {
        "type": "string",
        "minLength": 1
      },
      "description": {
        "type": "string",
        "minLength": 1
      },
      "legal_text": {
        "type": "string",
        "minLength": 1
      },
      "user_friendly_text": {
        "type": "string",
        "minLength": 1
      },
      "guidance": {
        "type": "string",
        "minLength": 1
      },
      "note": {
        "type": "string",
        "minLength": 1
      },
      "created_at": {
        "type": "integer",
        "minimum": 0
      }
    }
  },
  "asset_name": "pp",
  "asset_version": "01",
  "asset_schema": {
    "$schema":"http://json-schema.org/draft-07/schema#",
    "type":"object",
    "properties":{
      "purpose_id":{
        "type":"string",
        "pattern": "asset_id"
      },
      "company_id":{
        "type":"string"
      },
      "organization_id":{
        "type":"string"
      },
      "category_of_purpose":{
        "type":"string"
      },
      "purpose_name":{
        "type":"string"
      },
      "description":{
        "type":"string"
      },
      "provider":{
        "type":"string"
      },
      "time_of_provision":{
        "type":"string"
      },
      "is_active":{
        "type":"boolean",
        "default":true
      }
    }
  },
  "table_schema": {
    "$schema": "scalar_db_table_schema.json",
    "table_name": "purpose",
    "partition_keys": [
      {
        "name": "company_id",
        "type": "text"
      }
    ],
    "clustering_keys": [
      {
        "name": "created_at",
        "type": "bigint"
      },
      {
        "name": "organization_id",
        "type": "text"
      }
    ],
    "columns": [
      {
        "name": "category_of_purpose",
        "type": "text"
      },
      {
        "name": "purpose_name",
        "type": "text"
      },
      {
        "name": "description",
        "type": "text"
      },
      {
        "name": "provider",
        "type": "text"
      },
      {
        "name": "time_of_provision",
        "type": "text"
      },
      {
        "name": "updated_at",
        "type": "bigint"
      }
    ]
  }
}