{
  "contract_argument_schema":{
    "$schema":"http://json-schema.org/draft-07/schema#",
    "type":"object",
    "required":[
      "action",
      "company_id",
      "organization_id",
      "description",
      "is_active",
      "created_at",
      "updated_at"
    ],
    "properties":{
      "action":{
        "type":"string",
        "enum":[
          "update"
        ]
      },
      "company_id":{
        "type":"string",
        "format":"hostname"
      },
      "organization_id":{
        "type":"string",
        "pattern":"^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
      },
      "description":{
        "type":"string",
        "minLength":1
      },
      "is_active":{
        "type":"boolean"
      },
      "created_at":{
        "type":"integer",
        "minimum":0
      },
      "updated_at":{
        "type":"integer",
        "minimum":0
      }
    }
  },
  "asset_name": "pp",
  "asset_version": "01",
  "asset_schema": {
    "$schema":"http://json-schema.org/draft-07/schema#",
    "type":"object",
    "properties":{
      "purpose_id":{
        "type":"string",
        "pattern": "asset_id"
      },
      "company_id":{
        "type":"string"
      },
      "organization_id":{
        "type":"string"
      },
      "category_of_purpose":{
        "type":"string"
      },
      "purpose_name":{
        "type":"string"
      },
      "description":{
        "type":"string"
      },
      "provider":{
        "type":"string"
      },
      "time_of_provision":{
        "type":"string"
      },
      "is_active":{
        "type":"boolean",
        "default":true
      }
    }
  },
  "table_schema": {
    "$schema": "scalar_db_table_schema.json",
    "table_name": "purpose",
    "partition_keys": [
      {
        "name": "company_id",
        "type": "text"
      }
    ],
    "clustering_keys": [
      {
        "name": "created_at",
        "type": "bigint"
      },
      {
        "name": "organization_id",
        "type": "text"
      }
    ],
    "columns": [
      {
        "name": "category_of_purpose",
        "type": "text"
      },
      {
        "name": "purpose_name",
        "type": "text"
      },
      {
        "name": "description",
        "type": "text"
      },
      {
        "name": "provider",
        "type": "text"
      },
      {
        "name": "time_of_provision",
        "type": "text"
      },
      {
        "name": "updated_at",
        "type": "bigint"
      }
    ]
  }
}